<Page
    x:Class="Eptro.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Eptro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#FFC42E">

    <Grid Background="#FFC42E" ScrollViewer.VerticalScrollBarVisibility="Hidden">
        <Grid.RowDefinitions>
            <RowDefinition Height="125*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <WebView x:ConnectionId='1' DefaultBackgroundColor="#FFC42E" x:Name="webview1"                                       Source="ms-appx-web:///assets/www/index.html" Margin="0,10,0,17" ScrollViewer.VerticalScrollBarVisibility="Hidden" />
        <ProgressRing x:ConnectionId='2' x:Name="ProgressRing1" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="32" Width="33" Background="{x:Null}" Foreground="white" Margin="155,0,172,0" Grid.RowSpan="2"/>
        <Button x:ConnectionId='3' x:Name="Back" Content="&lt;&lt;" HorizontalAlignment="Center"                          Foreground="Black" Margin="114,0,205,0" VerticalAlignment="Bottom" RenderTransformOrigin="11.015,0.188" Background="{x:Null}" ClickMode="Press" Height="32" Grid.RowSpan="2"/>
        <Button x:ConnectionId='4' x:Name="load" Content="↻" HorizontalAlignment="Center" Foreground="Black" Margin="130,0,148,0" VerticalAlignment="Bottom" RenderTransformOrigin="11.015,0.188" Background="{x:Null}" Height="32" Grid.RowSpan="2"/>
        <Button x:ConnectionId='5' x:Name="Home" Content="&gt;&gt;" HorizontalAlignment="Center" Foreground="Black" Margin="188,0,131,0" VerticalAlignment="Bottom" RenderTransformOrigin="11.015,0.188" Background="{x:Null}" Height="32" Grid.RowSpan="2"/>

    </Grid>
</Page>

